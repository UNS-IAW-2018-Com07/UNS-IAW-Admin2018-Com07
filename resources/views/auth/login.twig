{% extends 'layout.twig' %}

{% block stylesheets %}
    <link rel='stylesheet' href='css/login.css'> 
{% endblock %}

{% block body %}
    <div class="container">
		<div class="row rowInicioLogo">
			<div class="col-lg-12 center-block">
				<p class="text-align-center">
					<img src="images/logo.png" class="imgLogo" alt="Logo" width="50" height="50">
				</p>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-12" align="center">
				<h1 class="iniciar-sesion">Iniciar Sesión</h1>
			</div>
		</div>
		<div class="row margenSuperior">
			<div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
				<div class="panel panel-default">
				  	<div class="panel-body">
				    	<form accept-charset="UTF-8" role="form" method="POST" action="/login">
				    	{{ csrf_field() }}
		                <fieldset>
		                	<label>Nombre de usuario </label>
				    	  	<div class="form-group">
				    		    <input class="form-control" placeholder="Usuario" name="name" type="text">
				    		</div>
				    		<label>Contraseña </label>
				    		<div class="form-group">
				    			<input class="form-control" placeholder="Contraseña" name="password" type="password" value="">
				    		</div>
				    		<input class="btn btnOscuro btn-block" type="submit" value="Iniciar Sesion">
				    	</fieldset>
				      	</form>
				    </div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}

{% block scripts %}

{% endblock %}