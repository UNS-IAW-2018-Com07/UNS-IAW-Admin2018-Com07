{% extends 'layout.twig' %}

{% block stylesheets %}
	<!-- Estilos propios CSS -->
	<link rel='stylesheet' href='css/navbar.css' >
	<link rel='stylesheet' href='css/agregarPropietario.css' >
{% endblock %}

{% block body %}
	{% include 'navbar.twig' %} 

	<div class="container">
		<div class="row rowConPadding">
			<div class="col-lg-12" align="center">
				<h1 class="titulo">Añadir un propietario</h1>
			</div>
		</div>
		<div class="row margenSuperior">
			<div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
				<div class="panel panel-default">
				  	<div class="panel-body">
		                	<label>Nombre propietario</label>
				    	  	<div class="form-group">
				    		    <input class="form-control" type="text" id="nombre">
				    		</div>
				    		<label>CUIT</label>
				    	  	<div class="form-group">
				    		    <input class="form-control" type="text" id="cuit">
				    		</div>
				    		<label>Correo electrónico</label>
				    	  	<div class="form-group">
				    		    <input class="form-control" type="text" id="email">
				    		</div>
				    		<label>Teléfono</label>
				    	  	<div class="form-group">
				    		    <input class="form-control" type="text" id="telefono">
				    		</div>
				    		<button class="btn btnOscuro btn-block" onclick="agregarPropietario();">Agregar</button>
				    </div>
				</div>
			</div>
		</div>
	</div>
	
{% endblock %}

{% block scripts %}
	  <script src="js/administradorAgregarPropietario.js"></script>
{% endblock %}