{% extends 'layout.twig' %}

{% block stylesheets %}
	<!-- Estilos propios CSS -->
	<link rel='stylesheet' href='/css/navbar.css' >
	<link rel='stylesheet' href='/css/agregarPropietario.css' >
{% endblock %}

{% block body %}

	{% include 'navbar.twig' %} 

	<div class="container">
		<div class="row rowConPadding">
			<div class="col-lg-12" align="center">
				<h1 class="titulo">{{title}}</h1>
			</div>
		</div>
		<div class="row margenSuperior">
			<div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
				<div class="panel panel-default">
				  	<div class="panel-body">
				  		{% if propietario._id is not defined %}
				  			<form method="POST" action="/agregarPropietario">
				  		{% else %}
				  			<form method="POST" action={{'/editarPropietario/'~propietario._id }}>
				  		{% endif %}
					  			{{ csrf_field() }}
			                	<label>Nombre propietario</label>
					    	  	<div class="form-group">
					    		    <input class="form-control" type="text" id="nombre" name="nombre" value='{{ propietario.nombre }}'>
					    		</div>
					    		<label>CUIT</label>
					    	  	<div class="form-group">
					    	  		{% if propietario.cuit is not defined %}
					    		    	<input class="form-control" type="text" id="cuit" name="cuit">
					    	  		{% else %}
					    	  			<input disabled class="form-control" type="text" id="cuit" name="cuit" value='{{ propietario.cuit }}'>
					    	  		{% endif %}
					    		</div>
					    		<label>Correo electrónico</label>
					    	  	<div class="form-group">
					    		    <input class="form-control" type="text" id="email" name="correoElectronico" value='{{ propietario.correoElectronico }}'>
					    		</div>
					    		<label>Teléfono</label>
					    	  	<div class="form-group">
					    		    <input class="form-control" type="text" id="telefono" name="telefono" value='{{ propietario.telefono }}'>
					    		</div>
					    		<button type="submit" class="btn btnOscuro btn-block">Agregar</button>
					    	</form>
				    </div>
				</div>
				{% if errors.any() %}
				 <div class="alert alert-danger">
		    		<ul>
		    			{% for error in errors.all() %}
                			<li>{{ error }}</li>
            			{% endfor %}
		    		</ul>
		    	</div>
				{% endif %}
			 	
			</div>
		</div>
	</div>
	
{% endblock %}
